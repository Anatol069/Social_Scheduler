                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/chart/chart.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/js/main.js"></script>

    <script>
        function toggleConnect(btn, platform) {
            // DacÄƒ e deja conectat -> DeconectÄƒm
            if (btn.classList.contains('btn-success')) {
                if (confirm('Sigur vrei sÄƒ deconectezi contul de ' + platform + '?')) {
                    btn.className = getOriginalClass(platform);
                    btn.innerHTML = '<i class="fa fa-plus me-2"></i>ConecteazÄƒ';
                }
            }
            // DacÄƒ nu e conectat -> SimulÄƒm conectarea
            else {
                const originalText = btn.innerHTML;
                btn.innerHTML = '<i class="fa fa-spinner fa-spin me-2"></i>Se conecteazÄƒ...';
                btn.disabled = true;

                // AÈ™teptÄƒm 1.5 secunde sÄƒ parÄƒ real
                setTimeout(() => {
                    btn.disabled = false;
                    btn.className = 'btn btn-success text-white rounded-pill w-100 btn-connect';
                    btn.innerHTML = '<i class="fa fa-check me-2"></i>Conectat';
                    alert('Succes! Contul de ' + platform + ' a fost conectat.');
                }, 1500);
            }
        }

        function getOriginalClass(platform) {
            if (platform === 'Facebook') return 'btn btn-outline-primary rounded-pill w-100 btn-connect';
            if (platform === 'Instagram') return 'btn btn-outline-danger rounded-pill w-100 btn-connect';
            if (platform === 'LinkedIn') return 'btn btn-outline-info rounded-pill w-100 btn-connect';
            return 'btn btn-outline-dark rounded-pill w-100 btn-connect';
        }
    </script>
</body>

</html>